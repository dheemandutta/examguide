@model SchoolExamGuide.Entities.SubjectMasterEntity 
@{
    ViewBag.Title = "Index";
}

<h2>Subject</h2>
<body>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" id="MyForm" data-parsley-validate="" novalidate="" action="#">


                <div class="form-group">
                    <label class="col-sm-2 control-label">Subject</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="text" placeholder="Subject" class="form-control" id="txtSubject" required="required" />
                            </div>
                        </div>
                    </div>
                </div>

                <label class="col-sm-2 control-label">Grade:<font color=""></font> </label>
                <div class="col-sm-10" style="width: 27%;">
                    @Html.DropDownList(mode=> model.ClassID,(IEnumerable<SelectListItem>)ViewBag.getsubjectall,"Select", new { @class="form-control", @id="drpGrade"})
                    
                    
                </div>
        </div>

        <div class="form-group">
            <input type="hidden" id="ExamID" />
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-default" id="btnCancel" onclick="ClearAll()">Clear</button>
                <button class="btn btn-primary" id="btnSave" onclick="SaveOrUpdate();">Save changes</button>
                @* <button type="submit" class="btn btn-primary" id="btnUpdate" onclick="Update();">Update</button>*@
            </div>
        </div>

        </form>
    </div>
</div>
